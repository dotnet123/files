    $(function () { 

        $.getJSON("/ajax/pan/path", { parentid: parentId }, function (json) {
            $(window.parent.document).contents().find("#modulemenu > .nav").find(".path").remove();
            $(window.parent.document).contents().find("#mingnav").after(json.msg); 
        });
    })
