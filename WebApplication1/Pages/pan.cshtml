<script>
    layui.use('upload', function(){
        var $ = layui.jquery
            ,upload = layui.upload;

        //拖拽上传
        upload.render({
            elem: '#wenjianadd'
            , url: '/tools/Upload/'
            , accept: 'file'
            , data: {parentId : @Model.parentId} //可选项。额外的参数，如：{id: 123, abc: 'xxx'}
            , done: function (res) {
                //如果上传失败
                if (res.code > 0) {
                    return layer.msg('上传失败');
                }

                layer.msg('上传成功');
                reload();
            }
            , error: function () {

            }
        });



    });
</script>
